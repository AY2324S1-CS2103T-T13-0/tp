@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyModulePan" as ReadOnlyModulePlan
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nReadOnlyModuleData" as ReadOnlyModuleData
Class "<<interface>>\nModel" as Model
Class ModulePlan
Class ModelManager
Class UserPrefs
Class ModuleData
Class ReadOnlyModulePlan
Class ReadOnlyUserPrefs

Class UniqueModuleList
Class UniqueDbModuleList
Class Module
Class DbModule
Class ModuleDescription
Class ModularCredit
Class Grade
Class ModuleCode
Class ModuleName
Class Year
Class Semester

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

ModulePlan .up.|> ReadOnlyModulePlan

ModelManager .up.|> Model
Model .down.> ReadOnlyUserPrefs
Model .down.> ReadOnlyModulePlan
Model .down.> ReadOnlyModuleData
ModelManager -down-> "1" ModulePlan
ModelManager -down-> "1" UserPrefs
ModelManager -down-> "1" ModuleData
ModuleData .up.|> ReadOnlyModuleData
UserPrefs .up.|> ReadOnlyUserPrefs

ModulePlan *--> "1" UniqueModuleList
ModuleData *--> "1" UniqueDbModuleList
UniqueDbModuleList --> "~* all" DbModule
UniqueModuleList --> "~* all" Module

Module *--> "1" ModuleCode
Module *--> "1" ModuleName
Module *--> "1" ModularCredit
Module *--> "1" Grade
Module *--> "1" ModuleDescription
Module *--> "1" Year
Module *--> "1" Semester

DbModule *--> "1" ModuleCode
DbModule *--> "1" ModuleName
DbModule *--> "1" ModularCredit
DbModule *--> "1" ModuleDescription

Module -[hidden]up--> I

ReadOnlyModuleData -[hidden]right--> ReadOnlyModulePlan
ReadOnlyModulePlan -[hidden]right--> ModelManager
ModelManager -[hidden]right--> ReadOnlyUserPrefs

ModuleCode -[hidden]right-> ModuleName
ModuleName -[hidden]right-> ModuleDescription
ModuleDescription -[hidden]right-> ModularCredit

ModelManager --> "~* filtered" Module
@enduml
